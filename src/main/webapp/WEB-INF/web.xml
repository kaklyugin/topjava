<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
		 http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <display-name>TopJava</display-name>

    <servlet>
        <servlet-name>userServlet</servlet-name>
        <servlet-class>ru.javawebinar.topjava.web.UserServlet</servlet-class>
        <load-on-startup>0</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>userServlet</servlet-name>
        <url-pattern>/users</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>mealServlet</servlet-name>
        <servlet-class>ru.javawebinar.topjava.web.MealServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>mealServlet</servlet-name>
        <url-pattern>/meals</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>errorServlet</servlet-name>
        <servlet-class>ru.javawebinar.topjava.web.ErrorServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>errorServlet</servlet-name>
        <url-pattern>/error</url-pattern>
    </servlet-mapping>
    <servlet>
        <display-name>NewMealServlet</display-name>
        <servlet-name>NewMealServlet</servlet-name>
        <servlet-class>ru.javawebinar.topjava.web.NewMealServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>NewMealServlet</servlet-name>
        <url-pattern>/NewMeal</url-pattern>
    </servlet-mapping>
    <servlet>
        <display-name>UpdateMealServlet</display-name>
        <servlet-name>UpdateMealServlet</servlet-name>
        <servlet-class>ru.javawebinar.topjava.web.UpdateMealServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateMealServlet</servlet-name>
        <url-pattern>/UpdateMeal</url-pattern>
    </servlet-mapping>
    <servlet>
        <display-name>DeleteMealServlet</display-name>
        <servlet-name>DeleteMealServlet</servlet-name>
        <servlet-class>ru.javawebinar.topjava.web.DeleteMealServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteMealServlet</servlet-name>
        <url-pattern>/DeleteMeal</url-pattern>
    </servlet-mapping>

</web-app>
